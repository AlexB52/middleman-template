---
title: Contact Me
---
<h1>Contact Me</h1>
<p class="lead mb-0">Send me a message and I'll try to reply as soon as possible :)</p>

<% form_tag '', name: 'contact-me', method: 'POST', action: '/thank-you/',
  data: { netlify: true, netlify_honeypot: 'username' } do %>
  <div class="col-5 float-left pr-3">
    <div class="form-group">
      <div class="form-group-header">
        <%= label_tag 'fullname' %>
      </div>
      <div class="form-group-body">
        <%= text_field_tag 'fullname', class: 'form-control', required: true %>
      </div>
    </div>
  </div>

  <div class="col-7 float-left">
    <div class="form-group">
      <div class="form-group-header">
        <%= label_tag 'email' %>
      </div>
      <div class="form-group-body">
        <%= text_field_tag 'email', class: 'form-control', required: true %>
      </div>
    </div>
  </div>

  <div class="form-group d-none">
    <div class="form-group-header">
      <%= label_tag 'username' %>
    </div>
    <div class="form-group-body">
      <%= text_field_tag 'username', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="form-group-header">
      <%= label_tag 'message' %>
    </div>
    <div class="form-group-body">
      <%= text_area_tag 'message', class: 'form-control', rows: '10', maxlength: 500, required: true %>
      <p class="note">Maximum 500 characters.</p>
    </div>
  </div>

  <div class="form-actions">
    <%= submit_tag 'Send Message', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', '/', class: 'btn' %>
  </div>
<% end %>
